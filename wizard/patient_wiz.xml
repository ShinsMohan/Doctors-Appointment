<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patient_prescription_view_form" model="ir.ui.view">
        <field name="name">patient.prescription.view.form</field>
        <field name="model">patient.prescription.wizard</field>
        <field name="arch" type="xml">
            <form string="Add to Prescription">
                <sheet>
                    <group>
                        <field name="medicine_id" />
                        <field name="dosage" />
                    </group>
                    <footer>
                        <button name='action_submit' string='Submit' type='object' class="oe_highlight" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
